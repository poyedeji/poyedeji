  <main>
    <select id="topic">
      <option value="data">Buy Data Bundles</option>
      <option value="lesson">Register for Lessons</option>
      <option value="contact">Contact Support</option>
    </select>
    <input type="text" id="userInput" placeholder="Type your message here..." />
    <button onclick="sendMessage()">Send</button>
    <div id="response">Awaiting your message...</div>
  </main>

  <script>
    function sendMessage() {
      const topic = document.getElementById('topic').value;
      const input = document.getElementById('userInput').value.trim();
      const response = document.getElementById('response');

      if (!input) {
response.textContent = "Please enter a message.";
        return;
      }

      let reply = '';

      if (topic === 'data') {
        reply = `You asked about buying data bundles. Our cheapest bundle is GHS 5 for 1GB. How much do you want to buy?`;
      } else if (topic === 'lesson') {
        reply = `To register for lessons, please deposit GHS 50. Would you like to proceed?`;
      } else if (topic === 'contact') {
        reply = `You can reach us at bilkayservices@gmail.com or WhatsApp +233 53 947 8867.`;
      } else {
        reply = "Sorry, I didn't understand your request.";
      }

      response.textContent = reply;
      document.getElementById('userInput').value = '';
    }
  </script>
